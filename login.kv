#:kivy 2.1.0
<LoginLayout>
    orientation: 'vertical'
    spacing: 100 #spacing between each properties
    padding: 100 #spacing between the edges

    Label:
        text: 'CantoConnect'
        font_size: 100
        bold: True

    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Email:'
            font_size: 50
        TextInput:
            id: username_input
            #hint_text: 'Email'
            multiline: False
            size_hint: (0.5, 0.5)
            pos_hint: {'x': 0.2, 'center_y': 0.5}
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Password:'
            font_size: 50
        TextInput:
            id: password_input
            #hint_text: 'Password'
            multiline: False
            password: True
            size_hint: (0.5, 0.5)
            pos_hint: {'x': 0.2, 'center_y': 0.5}

    Button:
        text: 'Login'
        size_hint: (0.5, 0.5)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        font_size: 50
        on_press: app.login()

#make the login page looks better